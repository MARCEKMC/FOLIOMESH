# Environment Variables for FolioMesh
# Copy this file to .env.local and fill in your actual values

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =====================================================
# AWS S3 CONFIGURATION
# =====================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=foliomesh-assets
AWS_REGION=us-east-1
AWS_CLOUDFRONT_DOMAIN=your_cloudfront_domain

# =====================================================
# NEXT AUTH CONFIGURATION
# =====================================================
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000

# =====================================================
# GOOGLE OAUTH
# =====================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =====================================================
# LEMONSQUEEZY PAYMENTS
# =====================================================
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key
LEMONSQUEEZY_WEBHOOK_SECRET=your_lemonsqueezy_webhook_secret
LEMONSQUEEZY_STORE_ID=your_store_id

# Product IDs for different plans
LEMONSQUEEZY_PREMIUM_ANNUAL_PRODUCT_ID=your_premium_product_id
LEMONSQUEEZY_COMPANY_SMALL_MONTHLY_PRODUCT_ID=your_small_company_product_id
LEMONSQUEEZY_COMPANY_LARGE_MONTHLY_PRODUCT_ID=your_large_company_product_id

# =====================================================
# EMAIL SERVICE (RESEND)
# =====================================================
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@foliomesh.com

# =====================================================
# EXTERNAL APIs
# =====================================================
# GitHub API for repository integration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# YouTube API for video embeds
YOUTUBE_API_KEY=your_youtube_api_key

# Google Translate API
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_key

# =====================================================
# VERIFICATION SERVICES
# =====================================================
# Persona ID for user verification
PERSONA_API_KEY=your_persona_api_key
PERSONA_TEMPLATE_ID=your_persona_template_id

# Trulioo for company verification
TRULIOO_USERNAME=your_trulioo_username
TRULIOO_PASSWORD=your_trulioo_password
TRULIOO_API_KEY=your_trulioo_api_key

# =====================================================
# ANALYTICS & MONITORING
# =====================================================
# Vercel Analytics (usually auto-configured)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# =====================================================
# REAL-TIME FEATURES
# =====================================================
# Pusher for real-time messaging (alternative to Supabase realtime)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=your_pusher_cluster

# =====================================================
# SECURITY & RATE LIMITING
# =====================================================
# Secret for JWT tokens
JWT_SECRET=your_jwt_secret

# Rate limiting configuration
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# =====================================================
# DOMAIN CONFIGURATION
# =====================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_DOMAIN=foliomesh.com

# For subdomain handling
NEXT_PUBLIC_ROOT_DOMAIN=foliomesh.com
NEXT_PUBLIC_SUBDOMAIN_SUFFIX=.foliomesh.com

# =====================================================
# DEVELOPMENT FLAGS
# =====================================================
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true

# Enable/disable features during development
ENABLE_ANALYTICS=false
ENABLE_REAL_TIME=true
ENABLE_PAYMENTS=false
ENABLE_TRANSLATIONS=true
ENABLE_3D_MODELS=true

# =====================================================
# FILE UPLOAD LIMITS
# =====================================================
MAX_FILE_SIZE_FREE=1048576
MAX_FILE_SIZE_PREMIUM=3145728
MAX_FILE_SIZE_COMPANY=10485760

# Image optimization
ENABLE_IMAGE_OPTIMIZATION=true
IMAGE_QUALITY=80
WEBP_QUALITY=75

# =====================================================
# CONTENT MODERATION
# =====================================================
# Report thresholds
REPORT_THRESHOLD_NOTIFICATION=5
REPORT_THRESHOLD_HIDE=10
REPORT_THRESHOLD_SUSPEND=50

# Content filtering
ENABLE_PROFANITY_FILTER=true
PROFANITY_FILTER_STRICTNESS=medium

# =====================================================
# BACKUP & MAINTENANCE
# =====================================================
# Database backup configuration
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're currently performing scheduled maintenance. Please check back soon."

# =====================================================
# THIRD-PARTY INTEGRATIONS
# =====================================================
# Cloudflare (for DNS and CDN)
CLOUDFLARE_API_TOKEN=your_cloudflare_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Namecheap (for domain management)
NAMECHEAP_API_USER=your_namecheap_user
NAMECHEAP_API_KEY=your_namecheap_key

# =====================================================
# LOGGING & DEBUGGING
# =====================================================
LOG_LEVEL=info
DEBUG_SQL=false
DEBUG_AUTH=false
DEBUG_UPLOADS=false

# =====================================================
# PERFORMANCE OPTIMIZATION
# =====================================================
# Cache configuration
ENABLE_REDIS_CACHE=false
CACHE_TTL_PORTFOLIOS=3600
CACHE_TTL_USERS=1800
CACHE_TTL_COMPANIES=7200

# CDN configuration
ENABLE_CDN=true
CDN_MAX_AGE=31536000

# =====================================================
# EXPERIMENTAL FEATURES
# =====================================================
# Enable experimental features
ENABLE_AI_CONTENT_GENERATION=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_VIDEO_PORTFOLIOS=false
ENABLE_VR_PORTFOLIOS=false